{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es5", "dom"],
        "types": ["cypress"],
        "importsNotUsedAsValues": "error",
        "isolatedModules": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.svelte",
        "test-setup.ts",
        "cli/**/*.ts",
        "types.d.ts",
        "cypress/**/*.ts"
    ]
}
