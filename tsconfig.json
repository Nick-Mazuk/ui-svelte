{
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "es2018",
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"allowJs": true,
		"checkJs": true,
	},
	"include": [
        "src/**/*.d.ts",
        "src/**/*.js",
        "src/**/*.ts",
        "src/**/*.svelte",
        "tests/**/*.ts"
    ]
}
